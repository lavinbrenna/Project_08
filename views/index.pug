extends layout

block content
h1 Books
p
    a.button(href='/books/new') Add New Book
table    
    thead
        tr
            th Title
            th Author
            th Genre
            th Year
    tbody
        each book in books.rows
            tr
                td
                    a(href=`/books/${book.id}`)= book.title
                td= book.author
                td= book.genre
                td= book.year